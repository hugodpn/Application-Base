<h1><%= t('access.title') %></h1>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :login, t('access.login') %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password, t('access.password') %><br />
    <%= f.password_field :password %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
