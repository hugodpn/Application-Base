<p>
  <%= f.label :title, t('articles.fields.title') %><br />
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :category, t('articles.fields.category') %><br />
  <%= f.select("category_id", Category.all.collect {|p| [ p.name, p.id ] }, { :include_blank => false }) %>
</p>
<p>
  <%= f.label :body, t('articles.fields.body') %><br />
  <%= f.text_area :body, :size => "50x6" %>
</p>