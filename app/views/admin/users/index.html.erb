<h1>Listing Users</h1>

<table class="normal_table">
  <th>Login</th>
  <th>Email</th>
  <th>Enabled</th>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.email %></td>
      <td><%= user.is_enabled %></td>
      <td><%= link_to 'Show', [:admin, user] %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
      <td><%= link_to 'Destroy', [:admin, user], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

